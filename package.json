{
  "name": "zlb-app",
  "version": "1.0.0",
  "description": "static site builder for ZLB app prototype",
  "scripts": {
    "scss": "node-sass source/sass -o source/css",
    "css": "postcss source/css/*.css -u autoprefixer cssnano -r -m",
    "watch:eleventy": "eleventy --serve",
    "watch:sass": "node-sass --watch source/sass -o source/css",
    "dev": "npm-run-all scss --parallel watch:eleventy watch:sass",
    "build": "run-s scss css eleventy",
    "eleventy": "eleventy",
    "eleventy:serve": "eleventy --serve",
    "test": "echo \"Currently no tests, so this passes.\" && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/technologiestiftung/zlb-app.git"
  },
  "author": "Sebastian Meier @seb_meier",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/technologiestiftung/zlb-app/issues"
  },
  "homepage": "https://github.com/technologiestiftung/zlb-app#readme",
  "devDependencies": {
    "@11ty/eleventy": "0.11.0",
    "autoprefixer": "^9.8.5",
    "bulma": "^0.9.0",
    "cssnano": "^4.1.10",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1"
  }
}
